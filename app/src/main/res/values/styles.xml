<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_24sp</item>
    </style>

    <style name="TextBlockStyle">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:paddingTop">@dimen/size_8dp</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
